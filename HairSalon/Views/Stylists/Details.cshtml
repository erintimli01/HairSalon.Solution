@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if (@Model.Clients.Count == 0)
{
  <h3>No clients have been added!</h3>
} 
else
{
  <h3>Clients:</h3>
  <ul>
    @foreach (Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.ClientDescription}", "Details", "Clients", new { id = client.ClientId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Edit Stylist", "Edit", null, new { id = Model.Name, @class = "link" })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", null, new { id = Model.Name, @class = "link" })</p>
<p>@Html.ActionLink("Back to list", "Index" , null, new { @class = "link" })</p>
<p>@Html.ActionLink("Home", "Index", "Home" , null, new { @class = "link" })</p>