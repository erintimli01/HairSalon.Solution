@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <input class="link" type="submit" value="Add new stylist" />
}
<p>@Html.ActionLink("Show all stylists", "Index", null, new { @class = "link" })</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "link" })</p>